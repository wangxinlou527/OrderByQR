<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9C7A1"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingLeft="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ordertv"
                    android:textSize="13sp"
                    android:text="@string/setting_dayin_tv"/>

                <ImageView
                    android:id="@+id/dailog_test_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/settings_print"
                    android:layout_marginLeft="3dp"
                    android:padding="3dp"/>

                <ImageView
                    android:id="@+id/dailog_ed_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/settings_print_edit"
                    android:padding="3dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/dailog_ok"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="@drawable/bg_yes"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:text="@string/str_confirm_2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ordertv"
                    android:textSize="13sp"
                    android:text="ip:"/>

                <EditText
                    android:id="@+id/dailog_ip_ed"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ordertv"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:enabled="false"
                    android:background="@drawable/bg_ed_2"
                    android:textSize="12sp"
                    android:padding="6dp"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/bg_no"
                android:gravity="center"
                android:text="取消"
                android:layout_marginRight="20dp"
                android:textColor="#E9C7A1"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_yes"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>