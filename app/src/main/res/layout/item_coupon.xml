<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_cl"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/item_ll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/pay_bg"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/item_tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11111"
            android:textColor="@color/white"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/item_tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="111111111"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_check"
        app:layout_constraintRight_toRightOf="@+id/item_ll"
        app:layout_constraintTop_toTopOf="@+id/item_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/checked"/>


</androidx.constraintlayout.widget.ConstraintLayout>